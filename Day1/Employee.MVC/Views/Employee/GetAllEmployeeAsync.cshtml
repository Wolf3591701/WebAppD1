@model IEnumerable<Employee.MVC.Models.EmployeeViewModel>

@{
    ViewBag.Title = "GetAllEmployeeAsync";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "PostEmployeeAsync")
</p>

<form asp-action="GetAllEmployeeAsync" method="get">
    <div class="form-group">
        <label for="SearchString">Search</label>
        <input type="text" name="SearchString" value=""/>
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("First Name", "GetAllEmployeeAsync", new { sorting2 = ViewBag.FirstNameSort })
        </th>
        <th>
            @Html.ActionLink("Last Name", "GetAllEmployeeAsync", new { sorting2 = ViewBag.LastNameSort })
        </th>
        <th>
            @Html.ActionLink("Birthday", "GetAllEmployeeAsync", new { sorting2 = ViewBag.BirthdaySort })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.ActionLink("Edit", "PutEmployeeAsync", new { id = item.Id }) |
                @Html.ActionLink("Details", "GetEmployeeAsync", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteEmployeeAsync", new { id = item.Id })
            </td>
        </tr>
    }

</table>
